<div class="row">
  <div class="medium-10 medium-offset-1 columns">
  	<h1>Have Fun</h1>
	<table class="chessboard" >
		<% (0..7).each do |row| %>
			<tr>
			<% (0..7).each do |col|  %>
					<td class="<%= color_block(row, col)%>">
						<% @pieces.each do |piece| %>
							<% if (piece.row_position == row) && (piece.col_position == col) %>

								<%= link_to "", edit_piece_path(piece.id), method: :get, :class => "#{assign_piece(piece.type, piece.color)}" %>

							<% end %>
						<% end %>
					</td>
			<% end %>
			</tr>
		<% end %>
	</table>
  </div>
</div>
